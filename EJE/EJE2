package practicauno;

import java.util.Scanner;

//Arreglo unidimensional de 10 números crecientes
public class ArregloUnidimensional { 

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int[] numeros = new int[10]; //arreglo de tamaño 10
		
		System.out.println("Ingreso de números en orden ascendente");
		
		// Primer número (se acepta sin validación)
		System.out.println("Ingrese el número 1: ");
		numeros[0] = sc.nextInt();
		
		// Los siguientes deben ser mayores que el anterior
		for (int i = 1; i < numeros.length; i++) {
			System.out.println("Ingrese el numero " + (i+1) + ": ");
			int num = sc.nextInt();
			
			// Verificamos que sea mayor al anterior
			while (num <= numeros[i-1]) {
				System.out.println("Error: El numero ingresado debe ser mayor que " + numeros[i-1]);
				System.out.println("Vuelva a intentar, ingrese un número mayor: ");
				num = sc.nextInt();
			}
			// Guardamos el número valido en el arreglo
			numeros[i] = num;
		}
		// Se muestra el arreglo final
		System.out.println("\n Arreglo final ingresado");
		for (int i = 0; i < 10; i++) {
			System.out.println("Posicón " +i+":"+numeros[i]);
		}
	}
}
